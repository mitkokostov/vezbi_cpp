/* Напиши програма која го пресметува растојанието помеѓу 
 * две точки (x1,y1) и (x2, y2) во Декартов координатен систем. 
 * Координатите на точките се од тип float.
 **/
 
#include <iostream> 
#include <cmath> 
#include <iomanip> 
using namespace std; 
int main() 
{ 
float x1,x2,y1,y2,rastojanie; 
cin >> x1 >> y1; 
cin >> x2 >> y2; 
rastojanie = sqrt(pow(x2-x1,2)+pow(y2-y1,2)); 
cout << fixed << setprecision(2); 
cout << "Rastojanieto pomegu tockite (" << x1 << ", " <<y1 << ") i ("; 
cout << x2 << ", " <<y2 << ") iznesuva " << endl << rastojanie; 
return 0; }
